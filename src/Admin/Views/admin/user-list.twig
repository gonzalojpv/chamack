{% extends 'templates/app.twig' %}

{% block main %}
<div class="container">
  <div class="row">
    <div class="small-12 columns">
      <div class="card-box">
        <div class="row">
          <div class="small-12 columns">
            <h3>Users <small>({{ users|length }})</small></h3>
          </div>
        </div>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Username</th>
              <th width="150">Email</th>
              <th width="120">Created at</th>
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
              <tr>
                <td>{{ user.id }}</td>
                <td> {{ user.name  ~ ' '  ~ user.first_name  ~ ' '  ~ user.last_name }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.created_at }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}
