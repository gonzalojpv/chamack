{% extends 'templates/app.twig' %}

{% block main %}
<div class="container">
  <div class="row">
    <div class="small-12 columns">
      <div class="card-box">
        {{ form_start(form) }}
        <div class="row">
          <div class="small-12 columns">
            <h3>New User</h3>
          </div>
        </div>

        <div class="row">
          <div class="small-4 columns">
            <label>Name
               {{ form_widget( form.name ) }}
             </label>
          </div>
          <div class="small-4 columns">
            <label>First name
               {{ form_widget( form.first_name ) }}
             </label>
          </div>
          <div class="small-4 columns">
            <label>Last name
               {{ form_widget( form.last_name ) }}
             </label>
          </div>
        </div>

        <div class="row">
          <div class="small-4 columns">
            <label>Username
               {{ form_widget( form.username ) }}
             </label>
          </div>
          <div class="small-4 columns">
            <label>Email
               {{ form_widget( form.email ) }}
             </label>
          </div>
          <div class="small-4 columns">
            <label>Password
               {{ form_widget( form.password ) }}
             </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 columns">
            {{ form_widget( form.submit ) }}
          </div>
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
